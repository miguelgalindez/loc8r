extends layout
block content
	.row.page-header.first-description.justify-content-center.mb-2.mb-sm-5
		.col-xs-12.col-md-6.border-bottom
			h2.placeName Review for #{location.name}
	.row.justify-content-center
		.col-xs-12.col-md-6
			form.form-horizontal(action='', method='POST', role='form')
				.form-group.row
					label.col-xs-12.col-sm-2.col-form-label(for='author') Name
					.col-xs-12.col-sm-10
						input#name.form-control(name='author')
				.form-group.row
					label.col-xs-12.col-sm-2.col-form-label(for='rating') Rating
					.col-xs-12.col-sm-10
						select#rating.form-control-sm(name='rating')
							option 5
							option 4
							option 3
							option 2
							option 1
				.form-group.row
					label.col-xs-12.col-sm-2.col-form-label(for='reviewText') Review
					.col-xs-12.col-sm-10
						textarea#review.form-control(name='reviewText', rows='5')
				button.btn.btn-outline-light.float-right Add my review